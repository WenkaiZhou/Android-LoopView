<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoopView">
        <!-- 跳动时间间隔 -->
        <attr name="loop_interval" format="integer" />
        <!-- 页面切换时间 -->
        <attr name="loop_scrollDuration" format="integer" />
        <!-- 是否自动跳转 -->
        <attr name="loop_autoLoop" format="boolean" />
        <!-- 指示点间距离 -->
        <attr name="loop_dotMargin" format="dimension" />
        <!-- 指示点选择器 -->
        <attr name="loop_dotSelector" format="reference" />
        <!-- 一直显示指示点，默认只有一个条目时隐藏 -->
        <attr name="loop_alwaysShowDot" format="boolean" />
        <!-- 默认轮转图片 -->
        <attr name="loop_placeholder" format="reference" />
        <!-- 自定义布局 -->
        <attr name="loop_layout" format="reference" />
    </declare-styleable>

</resources>